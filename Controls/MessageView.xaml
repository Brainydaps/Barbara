<?xml version="1.0" encoding="utf-8" ?>
<Frame
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Barbara.Controls.MessageView"
    Padding="8"
    Margin="4"
    HasShadow="False"
    CornerRadius="8"
    BackgroundColor="{Binding Author, Converter={StaticResource AuthorToColorConverter}}">
    <StackLayout>
        <Label Text="{Binding Author}" FontAttributes="Bold" FontSize="Small"/>
        <Label Text="{Binding Text}" LineBreakMode="WordWrap"/>
    </StackLayout>
</Frame>
