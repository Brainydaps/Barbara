<Shell
    x:Class="Barbara.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Barbara.Views">

    <TabBar>
        <!-- Analyst -->
        <ShellContent Title="Analyst"
                      Icon="analyst_icon.png"
                      ContentTemplate="{DataTemplate views:AnalystPage}"
                      Route="Analyst" />

        <!-- Journal Historian -->
        <ShellContent Title="Journal"
                      Icon="journal_icon.png"
                      ContentTemplate="{DataTemplate views:JournalHistorianPage}"
                      Route="JournalHistorian" />

        <!-- Psychologist -->
        <ShellContent Title="Psychologist"
                      Icon="psychologist_icon.png"
                      ContentTemplate="{DataTemplate views:PsychologistPage}"
                      Route="Psychologist" />
    </TabBar>
</Shell>